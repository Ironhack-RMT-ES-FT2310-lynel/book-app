<div>

  <h3>Formulario de crear</h3>

  <form action="/author/create" method="post">

    <label for="name">Nombre</label>
    <input type="text" name="name">

    <br>

    <label for="country">Pais de origin</label>
    <input type="text" name="country">

    <br>

    <label for="yearBorn">Año de nacimiento</label>
    <input type="number" name="yearBorn">

    <br>

    <button>Añadir</button>

  </form>

  <div>

    <h3>Autores actuales</h3>

    {{#each this.allAuthors}}

      <li>{{this.name}} nacido en {{this.country}} en año {{this.yearBorn}}</li>

    {{/each}}

  </div>


</div>