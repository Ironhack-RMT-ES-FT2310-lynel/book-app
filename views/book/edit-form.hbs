<div class="d-flex flex-column align-items-center">

  <h3>Formulario de editar</h3>

  <form action="/book/{{this.bookToEdit._id}}/edit" method="post">

    <label for="title">Titulo</label>
    <input type="text" name="title" value="{{this.bookToEdit.title}}">
    {{!-- el name del input deberia ser igual a la propiedad del modelo --}}

    <br>

    <label for="description">Descripci√≥n</label>
    <input type="text" name="description" value="{{this.bookToEdit.description}}">

    <br>

    <label for="author">Autor</label>
    {{!-- <input type="text" name="author" value="{{this.bookToEdit.author}}"> --}}

    <select name="author">

      <option value="{{this.bookToEdit.author._id}}" selected>{{this.bookToEdit.author.name}}</option>

      <option disabled> -------------- </option>

      {{#each this.allAuthors}}
        
        <option value="{{this._id}}">{{this.name}}</option>

      {{/each}}

    </select>

    <br>

    <button type="submit">Editar</button>

  </form>

  {{!-- <a href="/book/{{this.bookToEdit._id}}/delete"> --}}
  <form action="/book/{{this.bookToEdit._id}}/delete" method="post">
    <button>Borrar Libro</button>
  </form>
  {{!-- </a> --}}

</div>