<div class="d-flex flex-column align-items-center">

  <h3>Formulario para crear libros</h3>

  <form action="/book/create" method="post">

    <div class="mb-3">
      <label class="form-label" for="title">Titulo</label>
      <input class="form-control" type="text" name="title" >
      {{!-- el name del input deberia ser igual a la propiedad del modelo --}}
    </div>

    <div class="mb-3">
      <label class="form-label" for="description">Descripci√≥n</label>
      <input class="form-control" type="text" name="description">
    </div>


    <div class="mb-3">

      <label class="form-label" for="author">Autor</label>
      {{!-- <input type="text" name="author"> --}}

      {{!-- {{this.allAuthors}} --}}

      <select class="form-select" name="author" multiple>

        {{#each this.allAuthors}}

          <option value="{{this._id}}">{{this.name}}</option>

        {{/each}}

      </select>

    </div>

    <div class="d-grid gap-2">
      <button class="btn btn-primary my-btn" type="submit">Agregar</button>
    </div>

  </form>

</div>